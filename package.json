{
  "name": "@aragon/zaragoza",
  "version": "0.1.0",
  "description": "Human-centered Dao infrastructure",
  "repository": "https://github.com/aragon/Zaragoza",
  "author": "Aragon Association",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "build:contracts": "lerna run --scope=@aragon/zaragoza-contracts --stream compile",
    "manifest:subgraph:arbitrum:rinkeby": "lerna run --scope=@aragon/zaragoza-subgraph --stream manifest-arbitrum-rinkeby",
    "build:subgraph": "lerna run --scope=@aragon/zaragoza-subgraph --stream build",
    "test:subgraph": "cp -r packages/contracts/artifacts packages/subgraph/ && docker build --no-cache -t zaragoza-subgraph-tests packages/subgraph/; rm -r packages/subgraph/artifacts"
  }
}
