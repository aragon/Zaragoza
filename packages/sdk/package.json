{
  "name": "@aragon/sdk",
  "version": "0.0.1",
  "description": "Aragon JavaScript SDK",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "dist/cjs/public/index.js",
  "module": "dist/esm/public/index.js",
  "types": "dist/cjs/public/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "dev:esm": "yarn build:esm --watch",
    "dev:cjs": "yarn build:cjs --watch",
    "test": "jest && yarn e2e && yarn depcheck",
    "e2e": "yarn build && jest -c ./jest.config.e2e.js",
    "depcheck": "yarn build && dependency-check ./package.json --missing --verbose",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/zaragoza.git"
  },
  "homepage": "https://github.com/aragon/zaragoza",
  "keywords": [
    "Ethereum",
    "JavaScript",
    "API",
    "Aragon",
    "SDK"
  ],
  "authors": [
    {
      "name": "Samuel Furter - Aragon Association",
      "homepage": "https://github.com/nivida"
    }
  ],
  "devDependencies": {
    "@ethereumjs/config-tsc": "^1.1.1",
    "@ethereumjs/config-tslint": "^1.1.1",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@types/jest": "^27.0.3",
    "coveralls": "^3.1.1",
    "dependency-check": "^4.1.0",
    "jest": "^27.3.1",
    "rollup": "^2.60.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "ethers": "^5.5.1"
  }
}
