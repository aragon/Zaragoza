{
  "name": "@aragon/zaragoza-subgraph",
  "version": "0.0.1",
  "description": "Aragon V2 Subgraph",
  "homepage": "https://github.com/aragon/zaragoza",
  "license": "MIT",
  "scripts": {
    "build:contracts": "lerna run --scope=@aragon/zaragoza-contracts --stream compile",
    "deploy:contracts": "lerna run --scope=@aragon/zaragoza-contracts --stream deploy",
    "manifest": "scripts/build-manifest.sh",
    "build": "scripts/build-subgraph.sh",
    "test": "graph test",
    "deploy": "scripts/deploy-subgraph.sh",
    "start:dev": "docker-compose -f docker/docker-compose.yml up -d && yarn deploy:contracts -- -- --network localhost --reset",
    "stop:dev": "docker-compose -f docker/docker-compose.yml down",
    "create:local": "graph create aragon/aragon-zaragoza-rinkeby --node http://localhost:8020",
    "deploy:local": "LOCAL=true scripts/deploy-subgraph.sh",
    "coverage": "graph test -c"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.25.1",
    "@graphprotocol/graph-ts": "^0.24.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "matchstick-as": "^0.2.2"
  }
}
